<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calorie_dsiplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.benutritious.calorie_display">


    <TextView
        android:text="TextView"
        android:layout_width="120dp"
        android:textSize="48sp"
        android:id="@+id/value_text_view"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/you_precisely_need_text"
            android:layout_height="wrap_content"
            android:text = "You precisely need : "
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:paddingBottom="15dp"
            android:visibility="invisible"
            />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/after_calorie_display_exact_minerals"
        android:textSize="24sp"
        android:layout_below="@id/you_precisely_need_text"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:visibility="invisible"
        android:textColor="#0000ff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/make_more_sese"
            android:text="Make More Sense"
            android:textSize="24sp"
            android:layout_below="@id/after_calorie_display_exact_minerals"
            android:visibility="invisible"
            android:layout_alignLeft="@id/after_calorie_display_exact_minerals"
            android:textAlignment="center"
            android:onClick="make_more_sense_function"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dive_deeper"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textSize="48sp"
        android:text="Dive Deeper"
        android:onClick="dive_deeper_function"
        />


    <TextView
        android:text="You Need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/you_need_calories"
        android:layout_toLeftOf="@+id/value_text_view"
        android:layout_alignBottom="@id/value_text_view"/>

    <TextView
        android:id="@+id/text_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories"
        android:textSize="20sp"
        android:layout_toRightOf="@id/value_text_view"
        android:layout_toEndOf="@id/value_text_view"
        android:layout_alignBottom="@id/value_text_view" />


</RelativeLayout>
